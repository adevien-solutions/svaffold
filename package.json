{
	"name": "svaffold",
	"version": "2.0.1",
	"description": "Scaffold a monorepo to collect Svelte and TypeScript projects",
	"main": "./index.js",
	"scripts": {
		"lint": "eslint src",
		"build": "npx tsc && cp package.json dist/package.json && cp README.md dist/README.md && cp LICENSE dist/LICENSE",
		"test": "echo \"Error: no test specified\" && exit 1",
		"update-local": "npm uninstall -g svaffold && npm run build && (cd dist && npm i -g)"
	},
	"bin": {
		"svaffold": "./index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/adevien-solutions/svelte-scaffold.git"
	},
	"keywords": [
		"svelte",
		"monorepo"
	],
	"author": "adam-kov",
	"license": "MIT",
	"type": "module",
	"bugs": {
		"url": "https://github.com/adevien-solutions/svelte-scaffold/issues"
	},
	"homepage": "https://github.com/adevien-solutions/svelte-scaffold#readme",
	"dependencies": {
		"chalk": "^5.2.0",
		"cli-spinners": "^2.9.0",
		"commander": "^10.0.1",
		"create-svelte": "^4.2.0",
		"inquirer": "^9.2.2",
		"ora": "^6.3.0",
		"svelte-add": "^2023.5.4-0.0"
	},
	"devDependencies": {
		"@types/inquirer": "^9.0.3",
		"@types/node": "^20.1.0",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"prettier": "^2.8.8",
		"typescript": "^5.0.4"
	}
